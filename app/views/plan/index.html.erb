<div class="top">
  <h1>ツーリング予定を立てる</h1>
</div>
<div class="main-content">
  <%= form_for(@plan, url: plan_index_path) do |f| %>
    <div class="field">
      <%= f.label "年" %><em>(開催日時例・2020-01-01)</em><br />
      <%= f.collection_select(:year_id, Year.all, :id, :name, {}, {class:"genre-select"}) %>
    </div>
    <div class="field">
      <%= f.label "月" %><em>(開催日時例・2020-01-01)</em><br />
      <%= f.collection_select(:moon_id, Moon.all, :id, :name, {}, {class:"genre-select"}) %>
    </div>
    <div class="field">
      <%= f.label "日" %><em>(開催日時例・2020-01-01)</em><br />
      <%= f.collection_select(:day_id, Day.all, :id, :name, {}, {class:"genre-select"}) %>
    </div>
    <div class="field">
      <%= f.label :conditions %><em>(ツーリングについての集合場所、条件または備考等)</em><br />
      <%= f.text_field :conditions %>
    </div>
    <div class="field">
      <%= f.label :prefectures %><em>(都道府県)</em><br />
      <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"genre-select"}) %>
    </div>
    <div class="actions">
      <%= f.submit "計画を立てる" %>
    </div>
    <div class="go-home">
      <%= link_to "ホーム画面へ戻る", root_path%>
    </div>
  <% end %>
</div>