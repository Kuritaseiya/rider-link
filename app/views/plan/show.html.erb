<%= render "header/header"%>

<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-4">
      <h1 class="display-4">ツーリングプラン詳細</h1>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-1">
      <% if user_signed_in? %>
        <% if current_user.id == @plan.user.id %>
          <button type="button" class="btn btn-outline-primary">
            <%= link_to 'このプランを削除する', plan_path, method: :delete %>
          </button>
        <% end %>
      <% end %>
    </div>
  </div>

<%= render "child/new"%>

  <div class="row justify-content-center">
    <div class="col-2">
      <h2>開催者</h2>
    </div>
    <div class="col-2">
      <h2><%= @plan.user.nickname %></h2>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-2">
      <h2>募集人数</h2>
    </div>
    <div class="col-2">
      <h2><%= @plan.participant.name %>人</h2>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-2">
      <h2>参加者</h2>
    </div>
    <div class="col-2">
      <h2><%#= @plan.child.user.name %>人</h2>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-2">
      <h2>開催都道府県</h2>
    </div>
    <div class="col-2">
      <h2><%= @plan.prefecture.name%>県</h2>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-2">
      <h2>開催日時</h2>
    </div>
    <div class="col-2">
      <h2><%= @plan.year.name%>年<%= @plan.moon.name%>月<%= @plan.day.name%>日</h2>
    </div>
  </div> 
  <div class="row justify-content-center">
    <div class="col-2">
      <h2>排気量指定</h2>
    </div>
    <div class="col-2">
      <h2><%= @plan.power.name%></h2>
    </div>
  </div> 
  <div class="row justify-content-center">
    <div class="col-2">
      <h2>高速道路</h2>
    </div>
    <div class="col-2">
      <h2><%= @plan.highway.name%></h2>
    </div>
  </div> 
  <div class="row justify-content-center">
    <div class="col-2">
      <h2>年齢指定</h2>
    </div>
    <div class="col-2">
      <h2><%= @plan.age_min.name%>歳~<%= @plan.age_max.name%>歳</h2>
    </div>
  </div> 
  <div class="row justify-content-center">
    <div class="col-2">
      <h2>その他条件等</h2>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-4">
      <h3><%= @plan.conditions%></h3>
    </div>
  </div>
</div>
