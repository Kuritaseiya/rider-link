<head>
  <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script> 
  <script src="https://kit.fontawesome.com/001bb60e3d.js" crossorigin="anonymous"></script>
</head>

<div class="bg-light">
<%= render "header/header"%>

  <nav aria-label="breadcrumb" role="navigation">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">トップページ</a></li>
      <li class="breadcrumb-item">プラン詳細</li>
    </ol>
  <nav>


<div class="row justify-content-center">
  <div class="card" style="max-width: 100rem">
  <div class="col">
    <div class="card-header">
      <b>プラン詳細</b>
    </div>
    <div class="card-body">
    <%= render "child/new"%>
    <div class="container-fluid my-5">
      <div class="row">
        <div class="col-4 offset-md-2">
          <table class="table">
            <thead>
              <tr>
                <th scope="col"><h4>開催者</h4></th>
                <th scope="col"><h4><%= @plan.user.nickname %></h4></th>
              </tr>
            </thead>
            <thead>
              <tr>
                <th scope="col"><h4>募集人数</h4></td>
                <th scope="col"><h4><%= @plan.participant.name %>人</h4></td>
            </thead>
            <thead>
              <tr>
                <th scope="col"><h4>開催都道府県</h4></td>
                <th scope="col"><h4><%= @plan.prefecture.name%></h4></td>
              </tr>
            </thead>
            <thead>
              <tr>
                <th scope="col"><h4>開催日時</h4></td>
                <th scope="col"><h4><%= @plan.year.name%>年<%= @plan.moon.name%>月<%= @plan.day.name%>日</h4></td>
              </tr>
            </thead>
            <thead>
              <tr>
                <th scope="col"><h4>排気量指定</h4></td>
                <th scope="col"><h4><%= @plan.power.name%></h4></td>
              </tr>
            </thead>
            <thead>
              <tr>
                <th scope="col"><h4>高速道路</h4></td>
                <th scope="col"><h4><%= @plan.highway.name%></h4></td>
              </tr>
            </thead>
            <thead>
              <tr>
                <th scope="col"><h4>年齢指定</h4></td>
                <th scope="col"><h4><%= @plan.age_min.name%>歳~<%= @plan.age_max.name%>歳</h4></td>
              </tr>
            </thead>
            <thead>
              <tr>
                <th scope="col"><h4>メーカー指定</h4></td>
                <th scope="col"><h4><%= @plan.maker.name%></h4></td>
              </tr>
            </thead>
          </table>
        </div>
        <div class="col-5">
          <div class="row justify-content-center">
          <table class="table">
            <thead>
              <tr>
                <h2>その他条件等</h2>
              </tr>
            </thead>
          </table>
          </div>
            <div class="row justify-content-center">
              <div class="col">
                <div class="card" style="max-width: 100%;">
                  <div class="card-body">
                    <h5><%= @plan.conditions%></h5>
                  </div>
                </div>
              </div>
            </div>
        </div>
      </div>
      </div>
      <div class="row justify-content-center">
        <h2>参加者一覧</h2>
      </div>
    
      <div class="row justify-content-center">
        <div class="col-6">
          <% @plan.child.each do |c| %>
          <div class="card mb-2" style="max-width: 100%;">
            <div class="card-body">
              <div class="row justify-contnt-center">
                <h5><div class="col">　　<%= link_to c.user.nickname, all_user_path(c.user.id), class:"text-primary"%>さん
                                     　　<%= c.user.gender.name%>
                                     　　<%= c.user.mybike%>
                                     　　<%= c.user.age%>歳</div></h5>
              </div>
            </div>
          </div>
          <% end %></h6>
          <% if @plan.child.length == 0%>
            <div class="card mb-2" style="max-width: 100%;">
              <div class="card-body">
                <div class="row justify-contnt-center">
                  <h5><div class="col">まだ参加者はいません。</div></h5>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    </div>
  </div>
  </div>
</div>

<%= render "header/footer"%>
