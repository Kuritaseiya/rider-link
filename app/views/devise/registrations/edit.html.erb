<head>
  <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script> 
</head>


<%= render "header/header"%>
<div class="bg-light">
<div class="container-fluid">
  <div class="row justify-content-center">
    <h1 class="display-3">ユーザー編集</h1>
  </div>
</div>

<div class="container-fluid">
  <%= form_for(@user, url: user_registration_path) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="row justify-content-center">
    <div class="col-4">
      <%= f.label "ニックネーム" %><em><span class="badge badge-danger">必須</span>(１~６文字まで)</em>
      <%= f.text_field :nickname, autofocus: true, class:"form-control" %>
    </div>
  </div>
  
  <div class="row justify-content-center">
    <div class="col-4">
      <%= f.label "Eメール" %><em><span class="badge badge-danger">必須</span>
      <%= f.text_field :email, class:"form-control" %>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-4">
      <%= f.label "現在のパスワード" %> 
      <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control"%>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-4">
      <%= f.label "新しいパスワード" %>
      <% if @minimum_password_length %>
      <em><span class="badge badge-danger">必須</span>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %><br />
      <%= f.text_field :password, class:"form-control"%>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-4">
      <em><%= f.label "パスワード再確認　" %><em><span class="badge badge-danger">必須</span></em>
      <%= f.text_field :password_confirmation, class:"form-control" %>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-4">
      <%= f.label "年齢　" %><em><span class="badge badge-danger">必須</span>※半角数字のみ<br />
      <%= f.text_field :age, class:"form-control" %>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-4">
      <%= f.label "所持しているバイク　" %><em><span class="badge badge-primary">必須ではない</span><br />
      <%= f.text_field :mybike, class:"form-control" %>
    </div>
  </div>

  
  <div class="row justify-content-center">
    <div class="col-4">
      <%= f.label "性別　" %><em><span class="badge badge-danger">必須</span>
      <%= f.collection_select(:gender_id, Gender.all, :id, :name, {}, {class:"form-control"}) %>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-4">
      <%= f.label "お住まいの都道府県　" %><em><span class="badge badge-danger">必須</span>
      <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"form-control"}) %>
    </div>
  </div>

  <div class="row justify-content-center">
    <%= f.submit "登録する", class:"btn byn-primary" %>
  </div>
<% end %>
</div>
</div>
<%= render "header/footer"%>