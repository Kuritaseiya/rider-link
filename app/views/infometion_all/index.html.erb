<%= render "header/header"%>

<div class="container-fluid">
  <nav aria-label="breadcrumb" role="navigation">
    <ol class="breadcrumb">
      <li class="breadcrumb-item">お知らせ一覧</li>
    </ol>
  <nav>
</div>

<div class="container-fluid">
<% @infometions.each do |i| %>
  <% if @infometions.length != 0 %>
  <div class="row justify-content-center">
    <div class="col-8 py-1">
      <p><h2 class="border"><%= i.year.name%>/<%= i.moon.name%>/<%= i.day.name%>
         <span class="offset-4"><%= link_to i.title, infometion_all_path(i.id), class: "text-primary" %></span></p></h2>
    </div>
  </div>
  <% end %>
<% end %>
</div>



