  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script> 
</head>

<div class="bg-light">
<%= render "header/header"%>

<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-4 mt-4">
      <div class="card" style="max-width: 25rem;">
        <div class="card-body">
          <div class="row justify-content-center">
            <h4 class="card-title">USER PROFILE</h4>
          </div>
          <div class="row justify-content-center">
            <p class="card-text">ユーザープロフィール</p>
          </div>
        </div>
        <div class="card-body">
          ユーザーID:<%= @user.id%>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">ニックネーム:<%= @user.nickname %></li>
          <li class="list-group-item">年齢:<%= @user.age%><span>歳</li>
          <li class="list-group-item">あなたのバイク:<%= @user.mybike%></li>
          <li class="list-group-item">あなたの性別:<%= @user.gender.name%></li>
          <li class="list-group-item">あなたの出身地:<%= @user.prefecture.name%></li>
        </ul>
      </div>
    </div>
  </div>
</div>
  <div class="fixed-bottom text-center" id="nav">
    <%= render "header/footer"%>
  </div>
</div>