<head>
  <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script> 
</head>

<%= render "header/header"%>
<div class="bg-light">
  <div class="row justify-content-center">
    <h1><b>登録者一覧</b></h1>
  </div>
  <div class="row justify-content-center">
    <h2>現在<span class="text-success"><%= @users.length%></span>ユーザー</h2>
  </div>
  <div class="container-fluid">
    <div class="row">
      <% @users.each do |user| %>
        <% if @users.length != 0 %>
        <div class="col-4 mt-4">
          <div class="card" style="max-width: 25rem;">
          <div class="border-right border-bottom">
            <div class="card-body">
              <div class="row justify-content-center">
                <h3 class="card-title"><%= link_to user.nickname, all_user_path(user.id), class:"text-dark"%></h3>
              </div>
              <div class="row justify-content-center">
                <p class="card-text"><%= user.gender.name%></p>
              </div>
              <div class="row justify-content-center">
                <p class="card-text"><%= user.mybike%></p>
              </div>
            </div>
          </div>
          </div>
        </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<div class="fixed-bottom text-center" id="nav">
  <%= render "header/footer"%>
</div>



